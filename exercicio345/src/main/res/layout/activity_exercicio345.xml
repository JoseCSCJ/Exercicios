<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.exercicio345.Exercicio345">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="2+2=?"
            android:textSize="20sp"
         />

    <Spinner
        android:id="@+id/pergunta1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2+4-6=?"
        android:textSize="20sp"
        />
    <Spinner
        android:id="@+id/pergunta2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2+2+7=?"
        android:textSize="20sp"
        />

    <Spinner
        android:id="@+id/pergunta3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10*2-3=?"
        android:textSize="20sp"
        />

    <Spinner
        android:id="@+id/pergunta4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(6+5)/11=?"
        android:textSize="20sp"
        />
    <Spinner
        android:id="@+id/pergunta5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Responder"
        android:onClick = "responder"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acertos"
        />


</LinearLayout>
